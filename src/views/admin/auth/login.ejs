<!-- login page with tailwindcs -->

<section>
    <!-- login page -->
    <div class="w-full h-screen flex justify-center items-center">
        <div class="w-10/12 lg:w-1/3 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col my-2">
            <div class="mb-4">
                <h1 class="text-2xl font-bold">Masuk</h1>
                <div class="w-full">
                    <% if (msg) { %>
                        <% msg.forEach(item => { %>
                            <% if (item.type === 'success') { %>
                                <div class="bg-green-50 border border-green-400 text-green-700 px-4 py-3 rounded relative mt-4 flex flex-col" role="alert">
                                    <strong class="font-bold">Success!</strong>
                                    <span class="block sm:inline"><%= item.msg %></span>
                                </div>
                            <% } else if (item.type === "danger") { %>
                                <div class="bg-red-50 border border-red-400 text-red-700 px-4 py-3 rounded relative mt-4 flex flex-col" role="alert">
                                    <strong class="font-bold">Gagal!</strong>
                                    <span class="block sm:inline"><%= item.msg %></span>
                                </div>
                            <% } %>
                        <% }) %>
                    <% } %>
                </div>
            </div>
            <div>
            </div>
            <form action="/auth/login" method="POST">
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
                        Username
                    </label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" required type="text" placeholder="Username" name="username">
                </div>
                <div class="mb-6">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
                        Password
                    </label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" required type="password" placeholder="******************" name="password">
                </div>
                <div class="flex items-center justify-between">
                    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
                        Login
                    </button>
                </div>
                <div class="flex items-center justify-between mt-4">
                    <p class="text-gray-700 text-sm">Belum Punya Akun?</p>
                    <a href="/auth/register" class="text-blue-500 hover:text-blue-700 text-sm font-bold">Login</a>
                </div>
            </form>
        </div>
    </div>
</section>