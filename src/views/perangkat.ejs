<%- include('layouts/nav.ejs') %>

<section>
    <div class="container">
        <div class="row">
        <div class="col-md-12">
            <h1>Perangkat Desa</h1>
            <hr>
        </div>
        </div>
        <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
            <thead>
                <tr>
                <th scope="col">No</th>
                <th scope="col">Nama</th>
                <th scope="col">Jabatan</th>
                <th scope="col">Foto</th>
                </tr>
            </thead>
            <tbody>
                <% perangkat.forEach(function(perangkat, index){ %>
                <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <td><%= perangkat.nama %></td>
                    <td><%= perangkat.jabatan %></td>
                    <!-- img alt perangkat nama + peranghkat jabatan -->
                    <td><img src="<%= perangkat.foto %>" alt="<%= perangkat.nama + ' ' + perangkat.jabatan %>" width="100px"></td>

                </tr>
                <% }) %>
            </tbody>
            </table>
        </div>
        </div>
    </div>
</section>