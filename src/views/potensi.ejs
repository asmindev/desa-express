<%- include("layouts/nav") %>
<section>
    <section class="">
        <!-- bg fixed -->
        <div class="bg-fixed bg-cover bg-center bg-no-repeat bg-gray-400 h-[80vh] relative" style="background-image: url('assets/img/perangkat.jpeg');">
            <!-- overlay black -->
            <div class="bg-gradient-to-t from-black/75 to-transparent bg-opacity-50 absolute bottom-0 left-0 w-full h-3/4"></div>
            <div class="font-raleway w-full h-full absolute z-10 flex justify-center items-center">
                <div class="w-10/12 lg:w-full lg:flex items-center flex-col">
                    <!-- struktur perangkat desa -->
                    <div class="text-center">
                        <h1 class="text-3xl lg:text-5xl text-white font-bold">Potensi</h1>
                        <p class="text-white text-sm lg:text-base">Desa Konda Satu</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
<section>
    <div class="mt-16 w-full lg:w-8/12 mx-auto">
        <div class="my-12">
            <h1 class="text-3xl text-center font-bold">Potensi</h1>
            <h1 class="font-bold text-2xl lg:text-5xl text-center">Desa Konda Satu</h1>
        </div>
        <div class="w-full flex flex-col lg:flex-row flex-wrap">
            <% potensi.forEach(item => { %>
                <div class="w-full md:w-1/2 p-4 max-h-fit">
                    <div data-aos="fade-up" class="w-full bg-white border-[.5px] hover:shadow-lg rounded-lg transition-all duration-200 overflow-hidden">
                        <div class="w-full">
                            <img class="w-full max-h-80 object-cover rounded-t-lg" src="<%= item.photo %> " alt="kepala desa">
                        </div>
                        <div tabindex="0" class="collapse collapse-arrow bg-base-100">
                            <div class="collapse-title text-xl font-medium">
                                <h1 class="font-medium text-gray-700"><%= item.name %> </h1>
                            </div>
                            <div class="collapse-content">
                                <p class="text-sm text-gray-500 mt-2"><%= item.description %> </p>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>